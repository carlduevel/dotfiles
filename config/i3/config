# try to get popup windows in front
popup_during_fullscreen smart

# alsa mixer controls
bindsym XF86AudioRaiseVolume exec amixer -q set Master 5%+ unmute  
bindsym XF86AudioLowerVolume exec amixer -q set Master 5%- unmute  
bindsym XF86AudioMute exec amixer -D pulse set Master toggle
bindsym XF86AudioPlay exec playerctl play-pause  
bindsym XF86AudioNext exec playerctl next  
bindsym XF86AudioPrev exec playerctl previous

# lock screen
bindsym $mod+F12 exec display-lock
exec xautolock -time 1 -locker ~/bin/display-lock &

# Screen brightness controls
bindsym XF86MonBrightnessUp exec sudo brightnessctl s +5% # increase screen brightness
bindsym XF86MonBrightnessDown exec sudo brightnessctl s 5%- # decrease screen brightness

# Assigns
assign [class="Slack"] $ws9
assign [class="Signal"] $ws9
# https://github.com/i3/i3/issues/2060
for_window [class="Spotify"] move to workspace $ws10
# Anki opens a lot of windows
for_window [title="Anki - User 1"] focus; split h; layout stacked
# https://github.com/keybase/client/issues/8232
for_window [title="tracker - .*"] floating enable

# Switch off trackpad
exec --no-startup-id xinput --disable "SynPS/2 Synaptics TouchPad"
# Switch keyboard layout
exec_always --no-startup-id "setxkbmap -layout us,de -option grp:ctrls_toggle -option caps:super"
# wallpaper
exec_always --no-startup-id "feh --randomize --bg-scale ~/.wallpaper"
# lock screen if lid closed
exec --no-startup-id "xss-lock -- display-lock"


set $Locker display-lock && sleep 1

set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
#    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym e exec --no-startup-id loginctl terminate-user carl, mode "default"
    bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id $Locker && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"  

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+Pause mode "$mode_system"
# Move floating windows to 'scratchpad' workspace
bindsym $mod+x [floating] move scratchpad
# Bring back floating windows from 'scratchpad'
bindsym $mod+shift+x scratchpad show
# Start a new emacs client
bindsym $mod+m exec emacsclient --create-frame  --alternate-editor=""
# Capture on the spot
bindsym $mod+o exec emacsclient -c -F '(quote (name . "org-protocol-capture"))' -e '(org-capture)'


